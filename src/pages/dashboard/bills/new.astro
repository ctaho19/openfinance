---
import DashboardLayout from '../../../layouts/DashboardLayout.astro';
import NewBillForm from '../../../components/forms/new-bill-form';
import { getSession } from '../../../lib/get-session-astro';

const session = await getSession(Astro.request);
if (!session?.user?.id) {
  return Astro.redirect('/login');
}
---
<DashboardLayout title="Add Bill" currentPath="/dashboard/bills" user={session.user} showExploreSidebar={false}>
  <NewBillForm client:load />
</DashboardLayout>
