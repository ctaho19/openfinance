---
import DashboardLayout from '../../../layouts/DashboardLayout.astro';
import PayoffCalculator from '../../../components/debts/payoff-calculator';
import { getSession } from '../../../lib/get-session-astro';

const session = await getSession(Astro.request);
if (!session?.user?.id) {
  return Astro.redirect('/login');
}
---
<DashboardLayout title="Debt Calculator" currentPath="/dashboard/debts" user={session.user} showExploreSidebar={false}>
  <PayoffCalculator client:load />
</DashboardLayout>
